<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <!-- 轮播图       <com.xuexiang.xui.widget.banner.recycler.BannerLayout
                    android:id="@+id/bl_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_marginLeft="@dimen/screen_margin_horizontal"
                    android:layout_marginRight="@dimen/screen_margin_horizontal"
                    android:paddingTop="5dp"
                    app:bl_autoPlaying="true"
                    app:bl_centerScale="1.6"
                    app:bl_itemSpace="5dp"
                    app:bl_moveSpeed="1.8" />-->

        <include layout="@layout/layout_myinfo"></include>


        <!--  公告      -->
        <com.xuexiang.xui.widget.textview.marqueen.MarqueeView
            android:id="@+id/marqueeView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/screen_margin_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/screen_margin_horizontal"
            android:background="#88dddddd" />


        <!--渠道-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/channel_recView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/screen_margin_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/screen_margin_horizontal"
            android:nestedScrollingEnabled="false" />


        <!--赚金top10-->
        <ImageView
            android:id="@+id/homeView_imagview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/screen_margin_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/screen_margin_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/homepage_taojin91">

        </ImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recordRecyView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/screen_margin_horizontal"
            android:layout_marginRight="@dimen/screen_margin_horizontal"
            android:nestedScrollingEnabled="false"
            android:visibility="gone" />

        <TextView
            android:id="@+id/Top10NoData_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="暂无排名"
            android:textSize="20sp"
            android:visibility="gone"></TextView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>