<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <com.xuexiang.xui.widget.edittext.ClearEditText
        android:id="@+id/register_account_clearEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="@string/hint_username"
        android:inputType="textPersonName"
        android:textAlignment="viewStart" />

    <com.xuexiang.xui.widget.edittext.PasswordEditText
        android:id="@+id/register_pwd_clearEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="@string/input_pwd"
        android:inputType="textPassword"
        android:textAlignment="viewStart" />

    <com.xuexiang.xui.widget.edittext.PasswordEditText
        android:id="@+id/register_confirmPwd_clearEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="@string/input_confirmPwd"
        android:inputType="textPassword"
        android:textAlignment="viewStart" />

    <Button
        android:id="@+id/register_btn_sure"
        style="@style/Button.Style"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/register" />

    <TextView
        android:id="@+id/toLogin_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="40dp"
        android:text="@string/goto_login"
        android:textColor="@color/xui_btn_blue_normal_color" />


</LinearLayout>