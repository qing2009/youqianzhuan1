<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            android:id="@+id/stv_login_account"
            style="@style/EditInfoItem"
            app:sEditTextButtonType="clear"
            app:sEditTextHint="@string/hint_username"
            app:sLeftTextString="@string/username" />


        <com.xuexiang.xui.widget.textview.supertextview.SuperTextView
            android:id="@+id/stv_login_pwd"
            style="@style/EditInfoItem"
            app:sEditTextButtonType="password"
            app:sEditTextHint="@string/hint_password"
            app:sLeftTextString="@string/password" />



        <com.xuexiang.xui.widget.button.roundbutton.RoundButton
            android:id="@+id/login_btn_login"
            style="@style/RoundButton"
            android:layout_marginTop="50dp"
            android:text="登录" />



    </LinearLayout>

    <TextView
        android:id="@+id/register_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:text="@string/no_ccount_sign_up"
        android:textColor="@color/grey" />

</LinearLayout>
