<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/screen_margin_horizontal"
    android:layout_marginRight="@dimen/screen_margin_horizontal"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/screen_margin_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_weight="1" >

        <com.shanqb.shandianli.view.RoundCornerImageView
            android:id="@+id/home_mahua"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            app:corner_size="15"
            android:scaleType="fitXY"
            android:src="@drawable/manhua"
            ></com.shanqb.shandianli.view.RoundCornerImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1" >

        <com.shanqb.shandianli.view.RoundCornerImageView
            android:id="@+id/home_xiaoshuo"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:corner_size="15"
            android:src="@drawable/xiaoshuo"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/screen_margin_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_weight="1" >

        <com.shanqb.shandianli.view.RoundCornerImageView
            android:id="@+id/home_xinwen"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            app:corner_size="15"
            android:src="@drawable/xinwen"/>
    </RelativeLayout>

</LinearLayout>