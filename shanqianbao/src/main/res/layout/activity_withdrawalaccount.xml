<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xuexiang.xui.widget.actionbar.TitleBar
        android:id="@+id/withdrawalAccount_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_titleText="@string/withdrawal_account" />

    <com.xuexiang.xui.widget.edittext.ClearEditText
        android:id="@+id/account_clearEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="@string/input_zfb_account"
        android:textAlignment="viewStart" />

    <com.xuexiang.xui.widget.edittext.ClearEditText
        android:id="@+id/name_clearEditText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titleBar_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:hint="@string/input_zfb_name"
        android:textAlignment="viewStart" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:text="@string/withdrawal_account_tips"
        android:layout_marginRight="@dimen/activity_horizontal_margin"></TextView>

    <com.xuexiang.xui.widget.button.roundbutton.RoundButton
        android:id="@+id/login_btn_login"
        style="@style/RoundButton"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:text="@string/submit" />


</LinearLayout>
