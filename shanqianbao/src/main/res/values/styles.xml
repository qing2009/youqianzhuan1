<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="XUITheme.Phone">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!--标题栏底部线条-->
    <style name="titlebar_buttomLine2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titleBar_bottomLineHeight</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/line02</item>
    </style>

    <style name="Progress.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
    </style>

    <style name="EditInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="sLeftTextSize">17sp</item>
        <item name="sLeftTextColor">@color/xui_config_color_black</item>
        <item name="sCenterTextColor">@color/xui_config_color_black</item>
        <item name="sLeftViewWidth">60dp</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="sCenterViewMarginLeft">15dp</item>
        <item name="sCenterViewMarginRight">15dp</item>
        <item name="sDividerLineHeight">@dimen/titleBar_bottomLineHeight</item>
        <item name="sDividerLineColor">@color/app_primary_dark_color</item>
        <item name="sRightTextSize">13sp</item>
        <item name="sEditTextButtonType">clear</item>
        <item name="sRightViewMarginRight">0dp</item>
        <item name="sUseRipple">false</item>
        <item name="sEnableEdit">true</item>
        <item name="cet_clearIconSize">10dp</item>
    </style>

    <style name="Button.Style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?attr/xui_btn_view_text_size</item>
        <item name="android:textColor">@color/xui_config_color_white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xui_config_bg_blue_btn</item>
        <item name="android:padding">15dp</item>
    </style>

</resources>
