<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!--xui的主题修改规则请参考：https://github.com/xuexiangjys/XUI/wiki/%E4%B8%BB%E9%A2%98-->
    <!-- Application theme. -->
    <style name="AppTheme" parent="XUITheme.Phone">

        <!--**********************************************
        *                   xui color                    *
        ***********************************************-->
        <!-- CheckBox，RadioButton，SwitchCompat等一般控件的选中效果默认采用该颜色 -->
        <item name="colorAccent">@color/custom_color_main_theme</item>
        <!--应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimary">@color/title_bg</item>
        <!--应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorPrimaryDark">@color/xui_config_color_control_normal</item>
        <item name="colorControlNormal">@color/xui_config_color_control_normal</item>

        <!--actionbar的样式-->
        <item name="xui_actionbar_color">@color/white</item>
        <item name="xui_actionbar_text_color">@color/titleBar_title</item>
        <item name="xui_actionbar_immersive">false</item>
        <item name="xui_actionbar_ic_navigation_back">@drawable/back_icon</item>

        <item name="xui_config_size_title_text">@dimen/title_text_size</item>
        <item name="xui_config_size_content_text">@dimen/content_text_size</item>
        <item name="xui_config_size_explain_text">@dimen/explain_text_size</item>
    </style>
    <style name="PullDownStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="srlEnableOverScrollDrag">true</item>
        <item name="srlEnablePureScrollMode">true</item>
    </style>


    <!--标题栏底部线条-->
    <style name="titlebar_buttomLine2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/titleBar_bottomLineHeight</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/line02</item>
    </style>

    <style name="Progress.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowIsFloating">true</item>-->
        <!--<item name="android:backgroundDimEnabled">true</item>-->
    </style>

    <style name="EditInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="sLeftTextSize">17sp</item>
        <item name="sLeftTextColor">@color/xui_config_color_black</item>
        <item name="sCenterTextColor">@color/xui_config_color_black</item>
        <item name="sLeftViewWidth">60dp</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="sCenterViewMarginLeft">15dp</item>
        <item name="sCenterViewMarginRight">15dp</item>
        <item name="sDividerLineHeight">@dimen/titleBar_bottomLineHeight</item>
        <item name="sDividerLineColor">@color/custom_color_main_theme</item>
        <item name="sRightTextSize">13sp</item>
        <item name="sEditTextButtonType">clear</item>
        <item name="sRightViewMarginRight">0dp</item>
        <item name="sUseRipple">false</item>
        <item name="sEnableEdit">true</item>
        <item name="cet_clearIconSize">10dp</item>
    </style>


    <style name="superTextView_keyValue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="sLeftViewWidth">110dp</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="sCenterViewMarginLeft">25dp</item>
        <item name="sRightTextSize">?attr/xui_config_size_content_text</item>
    </style>

